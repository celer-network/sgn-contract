{
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": true,
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        },
        {
            "files": "*.js",
            "options": {
                "printWidth": 100,
                "tabWidth": 2,
                "singleQuote": true
            }
        }
    ]
}
